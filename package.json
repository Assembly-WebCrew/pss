{
  "name": "pss",
  "version": "0.1.0",
  "description": "Party Schedule Service",
  "main": "api/index.js",
  "scripts": {
    "start": "nodemon | bunyan",
    "build": "docker-compose build",
    "test": "mocha",
    "coverage": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel-core/register --colors --reporter dot test/*.es6",
    "testwatch": "mocha --no-exit --watch --reporter min test/02-test-users.es6",
    "db": "NODE_ENV=development bin/setup-db.sh",
    "resetdb": "NODE_ENV=development babel-node bin/initdb.es6",
    "containers": "docker-compose up -d && echo API is now up & running.",
    "stop": "docker-compose down"
  },
  "author": "Antti Myyr√§ & Assembly Webcrew",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "mysql": "^2.13.0",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "bunyan": "^1.8.10",
    "chai": "^4.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "restify": "^4.3.0",
    "restify-jwt": "^0.4.0",
    "restify-clients": "^1.5.0"
  }
}